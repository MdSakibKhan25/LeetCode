class Solution {
public:
    bool isValid(string s) {
        stack<char> parenthesis;
        for (auto const &ch : s) {
            if(ch == '(' || ch == '{' || ch == '[') parenthesis.push(ch);
            else {
                if(parenthesis.empty()) return false;
                else if(ch == ')' && parenthesis.top() == '(') parenthesis.pop();
                else if(ch == '}' && parenthesis.top() == '{') parenthesis.pop();
                else if(ch == ']' && parenthesis.top() == '[') parenthesis.pop();
                else return false;
            }
        }

        return parenthesis.empty();
    }
};
